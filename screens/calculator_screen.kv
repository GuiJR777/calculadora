                id: button_input_file
                text: "7"
                disabled: False
                size_hint_x: 0.33
                on_press: root.press_button("7")
                md_bg_color: 0.9, 0.27, 0.13, 1
                on_enter: self.md_bg_color = 0.58, 0.15, 0.06, 1
                on_leave: self.md_bg_color = 0.9, 0.27, 0.13, 1

