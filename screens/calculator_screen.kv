<Calculator>
    MDGridLayout:
        cols: 1
        pos: self.pos
        size: 800, 600
        adaptive_height: True

        # Labels
        MDLabel:
            id: output_label
            text: ""
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            halign: "right"

        MDGridLayout:
            id: "buttons"
            cols: 4

